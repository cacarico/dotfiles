{
  // Waybar Configuration
  "layer": "top",
  "output": [
    // "HDMI-A-1",
    "eDP-1"
    // "DP-1",
    // "DP-2"
  ],
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "custom/updates",
    "network",
    "backlight",
    "pulseaudio",
    "bluetooth",
    "upower"
  ],
  // Modules Configuration
  "upower": {
    "icon-size": 15,
    "hide-if-empty": true,
    "tooltip": true,
    "tooltip-spacing": 20
  },
  "pulseaudio": {
    "tooltip": false,
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-muted": "ğŸ”‡ {volume}%",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "format-icons": {
      // "default": ["ï€¦", "ï€§ ", "ï€¨  "],
      "default": [
        "ğŸ”ˆ",
        "ğŸ”‰",
        "ğŸ”Š"
      ]
    }
  },
  "network": {
    "tooltip": false,
    "hide-if-empty": false,
    "format-wifi": "ï‡«    {essid}",
    "format-ethernet": "",
    "on-click": "alacritty -T floating_nmtui -e nmtui"
  },
  "backlight": {
    "tooltip": false,
    "format": "ïƒ« {}%",
    "interval": 1,
    "on-scroll-up": "brillo -A 10",
    "on-scroll-down": "brillo -U 10"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 8
  },
  "clock": {
    "interval": 60,
    "format": "{:%H:%M}"
  },
  "custom/updates": {
    "format": "{} Update(s)",
    "exec": "checkupdates | wc -l",
    "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
    "interval": 15
  },
  "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "sort-by": "number",
    "active-only": false,
    "format-icons": {
      "1": "ï‰¨",
      "2": "ïµ",
      "3": "ï„ ",
      "4": "ï‰¨",
      "6": "ïµ",
      //"active": "ï†’",
      "default": "ï„‘"
    }
  },
  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "ïŠ” {status}",
    "format-disabled": "ïŠ” off", // an empty format will hide the module
    "format-connected": "ïŠ” {num_connections}",
    "tooltip-format": "{controller_alias}\\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\\t{controller_address}\\n\\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\\t{device_address}",
    "on-click": "bluetoothctl show | grep Powered | grep yes && bluetoothctl power off || bluetoothctl power on",
    "on-click-right": "blueman-manager",
    "on-scroll-up": "bluetoothctl connect E8:EE:CC:DB:C1:59",
    "on-scroll-down": "bluetoothctl disconnect E8:EE:CC:DB:C1:59"
  }
}
